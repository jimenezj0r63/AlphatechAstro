---
import { changeLanguage } from "i18next";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Pricing from "@components/pricing.astro";
import Logos from "@components/logos.astro";
import Faq from "@components/faq.astro";

changeLanguage("en");

const pricingData = [
    {
        name: "Personal",
        price: "Free",
        popular: false,
        features: ["Lifetime free", "Up to 3 users", "Unlimited Pages", "Astro Sub domain", "Basic Integrations", "Community Support"],
        button: {
            text: "Empieza Ahora",
            link: "/",
        },
    },
    {
        name: "Startup",
        price: {
            monthly: "$19",
            annual: "$16",
            discount: "10%",
            original: "$24",
        },
        popular: true,
        features: [
            "Dominios",
            "Alojamiento",
            "Correo Personalizado",
            "Advanced Integrations",
            "Soporte Tecnico",
        ],
        button: {
            text: "Empieza ahora",
            link: "/contact",
        },
    },
    {
        name: "Hosting",
        price: "Perzonalizado",
        popular: false,
        features: ["All Pro Features", "Unlimited Custom domains", "99.99% Uptime SLA", "SAML & SSO Integration", "24/7 Phone Support"],
        button: {
            text: "Contactanos",
            link: "/contact",
        },
    },
];
---

<Layout title="Pricing">
	<Container>
		<Sectionhead>
			<Fragment slot="title">Precios</Fragment>
			<Fragment slot="desc">Contactanos para cotizar algun proyecto</Fragment>
		</Sectionhead>

		<div class="grid md:grid-cols-3 gap-10 mx-auto max-w-4xl mt-20">
			{pricingData.map((item) => <Pricing plan={item} />)}
		</div>
		<!-- <Logos /> -->
		<Faq />
	</Container>
</Layout>
